# JARVIS Core Configuration

# LLM Path (Absolute or relative to root)
JARVIS_LLM_MODEL_PATH=models/llm/model.gguf

# Whisper Model (tiny, base, small, medium, large)
JARVIS_WHISPER_MODEL=base

# Audio Device Index (Run `import sounddevice as sd; print(sd.query_devices())` to find yours)
JARVIS_AUDIO_DEVICE=0

# Interaction Mode
JARVIS_PUSH_TO_TALK=true
JARVIS_WAKE_WORD=Jarvis
JARVIS_WAKE_SOUND_PATH=data/sounds/wake.wav

# Logging & Debug
JARVIS_LOG_LEVEL=INFO
JARVIS_DEBUG=false

# API Settings (For HUD)
JARVIS_API_ENABLE=true
JARVIS_API_PORT=8000
